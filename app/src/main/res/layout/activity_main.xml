<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/c1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#ffffff"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:id="@+id/image1"
                    android:layout_margin="10dp"
                    android:src="@drawable/image1"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cname1"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:text="Jinal Gandhi"
                        android:textSize="24sp"

                        android:textColor="#000000"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/catchphrase1"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:text="Mujse nhi ho rha yaar"
                        />


                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/c2"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#ffffff"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:id="@+id/image2"
                    android:layout_margin="10dp"
                    android:src="@drawable/image2"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/name2"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:text="Zenab Biscuitwala"
                        android:textSize="24sp"

                        android:textColor="#000000"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/catchphrase2"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:text="Mai padha dungi"
                        />


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/c3"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#ffffff"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:id="@+id/image3"
                    android:layout_margin="10dp"
                    android:src="@drawable/image4"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/name3"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:text="Manoj Sahu"
                        android:textSize="24sp"

                        android:textColor="#000000"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/catchphrase3"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:text="Bhai load mat le"
                        />


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/c4"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#ffffff"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:id="@+id/image4"
                    android:layout_margin="10dp"
                    android:src="@drawable/image3"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/name4"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:text="Kriti Verma"
                        android:textSize="24sp"

                        android:textColor="#000000"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/catchphrase4"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:text="Superb"
                        />


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/c5"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#ffffff"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:id="@+id/image5"
                    android:layout_margin="10dp"
                    android:src="@drawable/image5"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/name5"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:text="Tapan Joshi"
                        android:textSize="24sp"

                        android:textColor="#000000"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/catchphrase5"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:text="Apan kr lenge sab"
                        />


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</ScrollView>

